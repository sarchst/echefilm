<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BadMovies">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/room"
        android:id="@+id/room_picture"
        android:clickable="true"
        android:padding="5dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/troll"
        android:id="@+id/troll_picture"
        android:clickable="true"
        android:padding="5dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/birdemic"
        android:id="@+id/birdemic"
        android:clickable="true"
        android:padding="5dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/plan"
        android:id="@+id/plan_picture"
        android:clickable="true"
        android:padding="5dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/santa"
        android:id="@+id/santa_picture"
        android:clickable="true"
        android:padding="5dp"
        />

</LinearLayout>